{
    "name": "switchyd",
    "version": "0.7.6.10",
    "manifest_version": 2,
    
    "background":{
        "scripts": ["proxy.js"]
    },

    "options_page": "option.html",

    "permissions": [
        "proxy",
        "webRequest",
        "<all_urls>"
    ],
    
    "icons":{
        "16": "switchyd16.png",
        "48": "switchyd48.png",
        "128": "switchyd128.png"
    },

    "content_security_policy": "object-src 'self';script-src 'self' 'unsafe-eval';"
}
